{
  "name": "@whatsacomputertho/fbsim-ui",
  "version": "1.0.0-beta.1",
  "description": "Football simulation web components library",
  "type": "module",
  "main": "dist/fbsim-ui.cjs",
  "module": "dist/fbsim-ui.js",
  "types": "dist/fbsim-ui.d.ts",
  "exports": {
    ".": {
      "types": "./dist/fbsim-ui.d.ts",
      "import": "./dist/fbsim-ui.js",
      "require": "./dist/fbsim-ui.cjs"
    },
    "./register": {
      "types": "./dist/register.d.ts",
      "import": "./dist/register.js",
      "require": "./dist/register.cjs"
    }
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "dev": "vite",
    "dev:server": "cross-env NODE_ENV=development node server/index.cjs",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prod:server": "cross-env NODE_ENV=production node server/index.cjs"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "@whatsacomputertho/fbsim-core": "file:../fbsim-core",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "happy-dom": "^20.5.0",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "hbs": "^4.2.0"
  },
  "peerDependencies": {
    "@whatsacomputertho/fbsim-core": "^1.0.0-beta.1"
  },
  "peerDependenciesMeta": {
    "@whatsacomputertho/fbsim-core": {
      "optional": true
    }
  },
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/whatsacomputertho/fbsim-ui"
  }
}
